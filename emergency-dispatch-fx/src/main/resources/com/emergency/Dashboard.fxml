<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emergency.controller.DashboardController">
   <top>
      <Label text="Emergency Dispatch System" BorderPane.alignment="CENTER">
         <font><Font name="System Bold" size="20.0" /></font>
         <padding><Insets bottom="10.0" top="10.0" /></padding>
      </Label>
   </top>
   <center>
      <SplitPane dividerPositions="0.7" BorderPane.alignment="CENTER">
         <items>
            <VBox spacing="10.0">
               <children>
                  <Label text="Active Incidents"><font><Font name="System Bold" size="14.0" /></font></Label>
                  <TableView fx:id="activeIncidentsTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="actionColumn" prefWidth="90.0" text="Actions" />
                        <TableColumn fx:id="incidentIdColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                        <TableColumn fx:id="locationColumn" prefWidth="250.0" text="Location" />
                        <TableColumn fx:id="priorityColumn" prefWidth="100.0" text="Priority" />
                        <TableColumn fx:id="incidentStatusColumn" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="assignedUnitColumn" prefWidth="150.0" text="Assigned Unit" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="newIncidentButton" onAction="#handleNewIncidentClick" prefHeight="35.0" text="New Incident" />
                        <Button fx:id="closeIncidentButton" onAction="#handleCloseIncidentClick" prefHeight="35.0" text="Close Incident" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Emergency Units"><font><Font name="System Bold" size="14.0" /></font></Label>
                  <TableView fx:id="availableUnitsTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="unitNameColumn" prefWidth="120.0" text="Unit Name" />
                        <TableColumn fx:id="unitTypeColumn" prefWidth="90.0" text="Type" />
                        <TableColumn fx:id="unitStatusColumn" prefWidth="96.0" text="Status" />
                        <TableColumn fx:id="unitLocationColumn" prefWidth="120.0" text="Location" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="addUnitButton" onAction="#handleAddUnitClick" text="Add Unit" />
                        <Button fx:id="setOnSceneButton" onAction="#handleSetOnSceneClick" text="Set On Scene" />
                        <Button fx:id="setClearButton" onAction="#handleSetClearClick" text="Set Clear" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </items>
         <padding><Insets left="10.0" right="10.0" /></padding>
      </SplitPane>
   </center>
   <bottom>
      <VBox prefHeight="250.0" spacing="10.0">
         <children>
            <Label text="Incident History"><font><Font name="System Bold" size="14.0" /></font></Label>
            <ListView fx:id="locationHistoryView" VBox.vgrow="ALWAYS" />
            <HBox spacing="5.0">
               <children>
                  <TextField fx:id="newLocationNoteField" promptText="Enter new note..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="addLocationNoteButton" onAction="#handleAddLocationNoteClick" text="Add Note" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="dispatchButton" onAction="#handleDispatchClick" prefHeight="40.0" prefWidth="250.0" text="Dispatch Selected Unit to Incident" />
               </children>
               <padding><Insets top="10.0" /></padding>
            </HBox>
         </children>
         <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
      </VBox>
   </bottom>
</BorderPane>