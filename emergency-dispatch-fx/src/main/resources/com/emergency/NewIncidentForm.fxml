<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10.0" prefWidth="800.0" vgap="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emergency.controller.NewIncidentFormController">
   <columnConstraints>
      <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="120.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="100.0" prefHeight="120.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="First Name:">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Last Name:" GridPane.rowIndex="1">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Phone Number:" GridPane.rowIndex="2">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Incident Type:" GridPane.rowIndex="3">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Location:" GridPane.rowIndex="4">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Priority:" GridPane.rowIndex="5">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Severity Level:" GridPane.rowIndex="6">
         <font><Font size="14.0" /></font>
      </Label>
      <Label text="Description:" GridPane.rowIndex="7" GridPane.valignment="TOP">
         <font><Font size="14.0" /></font>
      </Label>
      <TextField fx:id="firstNameField" promptText="Enter first name" GridPane.columnIndex="1" />
      <TextField fx:id="lastNameField" promptText="Enter last name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="typeField" promptText="e.g., Fire, Accident" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="locationField" promptText="Enter address or landmark" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <ComboBox fx:id="priorityComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <ComboBox fx:id="severityComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <TextArea fx:id="descriptionArea" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Button fx:id="submitButton" onAction="#handleSubmitButtonClick" prefHeight="30.0" prefWidth="100.0" text="Submit" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>