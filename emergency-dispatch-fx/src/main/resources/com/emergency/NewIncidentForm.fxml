<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emergency.controller.NewIncidentFormController">
  <rowConstraints>
    </rowConstraints>
   <children>
      <Label text="First Name:"><font><Font size="14.0" /></font></Label>
      <Label text="Last Name:" GridPane.rowIndex="1"><font><Font size="14.0" /></font></Label>
      <Label text="Phone Number:" GridPane.rowIndex="2"><font><Font size="14.0" /></font></Label>
      <Label text="Incident Type:" GridPane.rowIndex="3"><font><Font size="14.0" /></font></Label>
      <Label text="Location:" GridPane.rowIndex="4"><font><Font size="14.0" /></font></Label>
      
      <Label text="Priority:" GridPane.rowIndex="5"><font><Font size="14.0" /></font></Label>
      <Label text="Severity Level:" GridPane.rowIndex="6"><font><Font size="14.0" /></font></Label>

      <Label text="Description:" GridPane.rowIndex="7"><font><Font size="14.0" /></font></Label>
      
      <TextField fx:id="firstNameField" GridPane.columnIndex="1" />
      <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

      <ComboBox fx:id="priorityComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <ComboBox fx:id="severityComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />

      <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Button fx:id="submitButton" onAction="#handleSubmitButtonClick" text="Submit" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</GridPane>